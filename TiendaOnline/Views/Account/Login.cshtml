@model TiendaOnline.Models.Dto.LoginRequestDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    :root {
        --color-principal: #3b82f6;
        --color-hover: #2563eb;
        --color-texto: #1f2937;
        --color-secundario: #1e40af;
        --color-accent: #06b6d4;
    }

    .btn-custom {
        background-color: var(--color-principal) !important;
        color: white !important;
        transition: all 0.3s ease;
        border: none;
        font-weight: 600;
        border-radius: 10px;
        padding: 12px 24px;
    }

        .btn-custom:hover {
            background-color: var(--color-hover) !important;
            color: white !important;
            transform: translateY(-1px);
        }

    .login-card {
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(59, 130, 246, 0.15) !important;
        border-left: 6px solid var(--color-principal);
        border: none;
        background: linear-gradient(145deg, #ffffff 0%, #f8fafc 100%);
    }

    .login-icon {
        margin-right: 8px;
        color: var(--color-principal);
    }

    .title-azul {
        color: var(--color-principal);
        font-weight: bold;
    }

    .form-control {
        border-radius: 10px;
        border: 2px solid #e2e8f0;
        transition: all 0.3s ease;
        padding: 12px 16px;
        background-color: #f8fafc;
    }

        .form-control:focus {
            border-color: var(--color-principal);
            box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.15);
            background-color: white;
        }

    .checkbox-custom {
        accent-color: var(--color-principal);
    }

    .login-header {
        padding-bottom: 25px;
        border-bottom: 3px solid var(--color-accent);
        margin-bottom: 30px;
        text-align: center;
        background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
        border-radius: 20px 20px 0 0;
        margin: -1.5rem -1.5rem 30px -1.5rem;
        padding: 30px;
    }

    .form-label {
        margin-bottom: 8px;
        color: var(--color-texto);
        font-weight: 600;
    }

    .forgot-password {
        color: var(--color-principal);
        text-decoration: none;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        font-weight: 500;
    }

        .forgot-password:hover {
            text-decoration: underline;
            color: var(--color-hover);
        }

    .main-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 40px 0;
    }

    .card-body {
        padding: 1.5rem;
    }

    .subtitle-text {
        color: #64748b;
        font-size: 0.95rem;
    }

    .register-section {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        padding: 20px;
        margin-top: 20px;
        border: 2px solid rgba(59, 130, 246, 0.1);
    }

    .validation-error {
        background: #fef2f2;
        border: 1px solid #fecaca;
        border-radius: 8px;
        padding: 15px;
        margin-top: 15px;
    }
</style>

<div class="main-container">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-12">
                <div class="card login-card p-4">
                    <div class="login-header">
                        <h3 class="title-azul roboto-ExtraBold-800">
                            <i class="fas fa-user-circle login-icon"></i>
                            Portal de Acceso
                        </h3>
                        <p class="subtitle-text roboto-thin-ExtraLight-200 mb-0">Ingresa tus credenciales para continuar</p>
                    </div>
                    <div class="card-body pt-2">
                        <form id="frmForm" method="post">
                            <div class="mb-3">
                                <label for="UserName" class="form-label title-azul roboto-thin-ExtraLight-200 mb-0">
                                    <i class="fas fa-envelope login-icon"></i>
                                    Usuario
                                </label>
                                <input asp-for="UserName" class="form-control" placeholder="Nombre de usuario o correo electrónico" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="Password" class="form-label title-azul roboto-thin-ExtraLight-200">
                                    <i class="fas fa-key login-icon"></i>
                                    Contraseña
                                </label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Tu contraseña segura" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input checkbox-custom" id="rememberMe" />
                                    <label class="form-check-label roboto-thin-ExtraLight-200" for="rememberMe">
                                        Recordar mi sesión
                                    </label>
                                </div>
                                <a href="#" class="forgot-password">¿Recuperar contraseña?</a>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-custom px-4 py-2">
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    Acceder al Sistema
                                </button>
                            </div>
                            <div class="mt-3">
                                <div asp-validation-summary="All" class="text-danger validation-error"></div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="text-center register-section">
                    <p class="text-muted">¿Necesitas una cuenta? <a href="#" class="forgot-password">Solicitar registro</a></p>
                </div>
            </div>
        </div>
    </div>
</div>