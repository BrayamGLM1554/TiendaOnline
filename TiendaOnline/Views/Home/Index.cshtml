@model IEnumerable<TiendaOnline.Models.Dto.ProductDto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "EcoCloud - Tienda Online";
}
@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --color-principal: #3b82f6;
            --color-hover: #2563eb;
            --color-texto: #1f2937;
            --color-secundario: #1e40af;
            --color-accent: #06b6d4;
            --color-success: #10b981;
            --color-warning: #f59e0b;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }

        .store-header {
            background: linear-gradient(135deg, var(--color-principal) 0%, var(--color-secundario) 100%);
            padding: 3rem 0;
            color: white;
            margin-bottom: 3rem;
        }

            .store-header h1 {
                color: white;
                font-weight: 800;
                font-size: 3rem;
                text-shadow: 0 4px 8px rgba(0,0,0,0.2);
                display: flex;
                align-items: center;
                gap: 15px;
            }

                .store-header h1 i {
                    color: var(--color-accent);
                }

            .store-header p {
                font-size: 1.1rem;
                font-weight: 300;
                opacity: 0.9;
                margin-top: 5px;
            }

        .search-bar {
            position: relative;
            width: 100%;
            max-width: 600px;
        }

            .search-bar input {
                width: 100%;
                padding: 18px 60px 18px 25px;
                border: none;
                border-radius: 15px;
                background: rgba(255,255,255,0.95);
                font-size: 1.1rem;
                font-weight: 400;
                color: var(--color-texto);
                box-shadow: 0 10px 25px rgba(0,0,0,0.1);
                transition: all 0.3s ease;
            }

                .search-bar input:focus {
                    outline: none;
                    background: white;
                    box-shadow: 0 20px 40px rgba(59, 130, 246, 0.2);
                    transform: translateY(-2px);
                }

            .search-bar button {
                position: absolute;
                right: 8px;
                top: 50%;
                transform: translateY(-50%);
                background: linear-gradient(135deg, var(--color-principal), var(--color-accent));
                border: none;
                color: white;
                border-radius: 10px;
                width: 45px;
                height: 45px;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: all 0.3s ease;
            }

                .search-bar button:hover {
                    transform: translateY(-50%) scale(1.1);
                }

        .header-btn {
            background: rgba(255,255,255,0.15);
            border: 2px solid rgba(255,255,255,0.2);
            color: white;
            border-radius: 12px;
            width: 55px;
            height: 55px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            font-size: 1.1rem;
            position: relative;
            text-decoration: none;
        }

            .header-btn:hover {
                background: rgba(255,255,255,0.25);
                color: white;
                transform: translateY(-3px);
            }

        .product-card {
            border: none;
            border-radius: 20px;
            overflow: hidden;
            background: white;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            height: 100%;
        }

            .product-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 40px rgba(59, 130, 246, 0.15);
            }

        .product-image {
            height: 220px;
            object-fit: contain;
            padding: 20px;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            transition: all 0.3s ease;
        }

        .product-card:hover .product-image {
            transform: scale(1.05);
        }

        .card-body {
            padding: 25px;
        }

        .card-title {
            font-weight: 600;
            font-size: 1.1rem;
            color: var(--color-texto);
            margin-bottom: 15px;
            line-height: 1.4;
        }

        .price {
            font-weight: 700;
            color: var(--color-principal);
            font-size: 1.4rem;
        }

        .rating {
            display: flex;
            gap: 2px;
        }

            .rating i {
                color: #fbbf24;
                font-size: 0.9rem;
            }

        .btn-blue {
            background: var(--color-principal);
            color: white;
            border: none;
            border-radius: 10px;
            padding: 12px 20px;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

            .btn-blue:hover {
                color: white;
                background: var(--color-hover);
                transform: translateY(-2px);
            }

        .btn-outline-blue {
            border: 2px solid var(--color-principal);
            color: var(--color-principal);
            background: transparent;
            border-radius: 10px;
            padding: 10px 20px;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }

            .btn-outline-blue:hover {
                background: var(--color-principal);
                color: white;
                transform: translateY(-2px);
            }

        .section-title {
            padding-bottom: 20px;
            margin-bottom: 10px;
            font-weight: 700;
            font-size: 2rem;
            color: var(--color-principal);
            display: flex;
            align-items: center;
            gap: 15px;
            position: relative;
        }

            .section-title::after {
                content: "";
                position: absolute;
                bottom: 0;
                left: 0;
                width: 80px;
                height: 4px;
                background: var(--color-accent);
                border-radius: 2px;
            }

            .section-title i {
                color: var(--color-accent);
            }

        .filter-box {
            background: rgba(255,255,255,0.95);
            padding: 35px;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            margin-bottom: 40px;
            border-top: 4px solid var(--color-principal);
        }

            .filter-box .form-control, .filter-box .form-select {
                border: 2px solid #e2e8f0;
                border-radius: 10px;
                padding: 12px 18px;
                background: #f8fafc;
                transition: all 0.3s ease;
                font-weight: 500;
            }

                .filter-box .form-control:focus, .filter-box .form-select:focus {
                    border-color: var(--color-principal);
                    box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.15);
                    background: white;
                }

        .form-label {
            font-weight: 600;
            color: var(--color-texto);
            margin-bottom: 8px;
            font-size: 0.95rem;
        }

        .owl-carousel .item {
            padding: 15px;
        }

        .owl-theme .owl-nav [class*='owl-'] {
            background: var(--color-principal);
            color: white;
            border-radius: 10px;
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            border: none;
            font-size: 1.1rem;
        }

            .owl-theme .owl-nav [class*='owl-']:hover {
                transform: scale(1.1);
                background: var(--color-hover);
            }

        .owl-theme .owl-dots .owl-dot span {
            background: rgba(59, 130, 246, 0.3);
            transition: all 0.3s ease;
        }

        .owl-theme .owl-dots .owl-dot.active span,
        .owl-theme .owl-dots .owl-dot:hover span {
            background: var(--color-principal);
        }

        .badge {
            background: var(--color-accent) !important;
            font-weight: 600;
            font-size: 0.8rem;
        }

        .text-muted-light {
            color: rgba(255,255,255,0.85) !important;
            font-weight: 300;
        }

        .btn-success-custom {
            background: var(--color-success);
            border: none;
            color: white;
        }

            .btn-success-custom:hover {
                background: #059669;
                color: white;
            }

        .load-more-btn {
            background: linear-gradient(135deg, var(--color-principal), var(--color-accent));
            color: white;
            border: none;
            padding: 15px 40px;
            border-radius: 15px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .load-more-btn:hover {
                transform: translateY(-3px);
                color: white;
            }

        .product-item {
            transition: all 0.3s ease;
        }

        .container-fluid {
            background: rgba(255, 255, 255, 0.05);
            min-height: 100vh;
        }

        .main-content {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 25px 25px 0 0;
            padding: 30px;
            margin-top: -1px;
            position: relative;
            z-index: 2;
        }

    </style>
}

<div class="container-fluid px-0">
    <!-- Header principal -->
    <header class="store-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-3 mb-3 mb-lg-0">
                    <h1><i class="fas fa-store"></i>XipeTec</h1>
                    <p class="mb-0 text-muted-light">Tecnología que transforma vidas</p>
                </div>
                <div class="col-lg-6 mb-3 mb-lg-0">
                    <div class="search-bar">
                        <input type="text" class="form-control form-control-lg" id="mainSearch" placeholder="Busca productos increíbles...">
                        <button type="button"><i class="fas fa-search"></i></button>
                    </div>
                </div>
                <div class="col-lg-3 text-lg-end">
                    <a href="#" class="btn header-btn me-3">
                        <i class="fas fa-user"></i>
                    </a>
                    <a href="#" class="btn header-btn position-relative">
                        <i class="fas fa-shopping-cart"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill">3</span>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <div class="main-content">
        <div class="container-fluid px-lg-5">
            <!-- Filtros -->
            <div class="filter-box">
                <h4 class="section-title"><i class="fas fa-filter"></i>Filtrar Productos</h4>
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Buscar producto</label>
                        <input type="text" class="form-control" id="searchInput" placeholder="Nombre del producto...">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Precio máximo</label>
                        <input type="number" class="form-control" id="priceFilter" placeholder="$0.00">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Valoración mínima</label>
                        <select class="form-select" id="ratingFilter">
                            <option value="">Todas las valoraciones</option>
                            <option value="1">⭐ 1+ estrella</option>
                            <option value="2">⭐ 2+ estrellas</option>
                            <option value="3">⭐ 3+ estrellas</option>
                            <option value="4">⭐ 4+ estrellas</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Ordenar por</label>
                        <select class="form-select" id="sortFilter">
                            <option value="none">Más relevantes</option>
                            <option value="priceAsc">💰 Precio: menor a mayor</option>
                            <option value="priceDesc">💎 Precio: mayor a menor</option>
                            <option value="ratingDesc">⭐ Mejor valorados</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Carrusel de productos destacados -->
            <h4 class="section-title"><i class="fas fa-star"></i>Productos Destacados</h4>
            <div class="owl-carousel owl-theme mb-5">
                @foreach (var product in Model.Take(5))
                {
                    <div class="item">
                        <div class="card product-card">
                            <img src="@product.ImageUrl" class="card-img-top product-image" alt="@product.Name" />
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="price">@string.Format("{0:c}", product.Price)</span>
                                    <div class="rating">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star-half-alt"></i>
                                        <i class="far fa-star"></i>
                                    </div>
                                </div>
                                <a asp-action="ProductDetails" asp-route-productId="@product.ProductId"
                                   class="btn btn-blue w-100">
                                    <i class="fas fa-eye me-2"></i>Ver Detalles
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Todos los productos -->
            <h4 class="section-title"><i class="fas fa-th-large"></i>Catálogo Completo</h4>
            <div class="row" id="productList">
                @foreach (var product in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4 product-item" data-name="@product.Name" data-price="@product.Price">
                        <div class="product-card">
                            <img src="@product.ImageUrl" class="w-100 product-image" alt="@product.Name" />
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="price">@string.Format("{0:c}", product.Price)</span>
                                    <div class="rating">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="far fa-star"></i>
                                        <i class="far fa-star"></i>
                                    </div>
                                </div>
                                <div class="d-grid gap-2">
                                    <a asp-action="ProductDetails" asp-route-productId="@product.ProductId"
                                       class="btn btn-blue">
                                        <i class="fas fa-info-circle me-2"></i>Detalles
                                    </a>
                                    <button class="btn btn-outline-blue add-to-cart" data-id="@product.ProductId">
                                        <i class="fas fa-cart-plus me-2"></i>Agregar al Carrito
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-5 mb-5">
                <button id="loadMoreBtn" class="btn load-more-btn">
                    <i class="fas fa-plus-circle me-2"></i>Cargar Más Productos
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script>
        $(document).ready(function(){
            // Inicializar carrusel
            $('.owl-carousel').owlCarousel({
                loop: true,
                margin: 25,
                nav: true,
                dots: true,
                autoplay: true,
                autoplayTimeout: 4000,
                autoplayHoverPause: true,
                smartSpeed: 800,
                responsive: {
                    0: { items: 1 },
                    576: { items: 2 },
                    768: { items: 3 },
                    992: { items: 4 }
                }
            });

            // Filtrar productos
            let filterTimeout;
            $('#searchInput, #xceFilter, #ratingFilter, #sortFilter').on('change keyup', function() {
                clearTimeout(filterTimeout);
                filterTimeout = setTimeout(filterProducts, 300);
            });

            function filterProducts() {
                const searchTerm = $('#searchInput').val().toLowerCase().trim();
                const maxPrice = parseFloat($('#priceFilter').val()) || Infinity;
                const minRating = parseInt($('#ratingFilter').val()) || 0;
                const sortBy = $('#sortFilter').val();

                let visibleItems = [];

                $('.product-item').each(function() {
                    const $item = $(this);
                    const productName = $item.data('name').toLowerCase();
                    const productPrice = parseFloat($item.data('price'));
                    const productRating = 3;

                    const nameMatch = !searchTerm || productName.includes(searchTerm);
                    const priceMatch = productPrice <= maxPrice;
                    const ratingMatch = productRating >= minRating;

                    if (nameMatch && priceMatch && ratingMatch) {
                        $item.show();
                        visibleItems.push($item);
                    } else {
                        $item.hide();
                    }
                });

                if (visibleItems.length === 0) {
                    if (!$('#no-results').length) {
                        $('#productList').append(`
                            <div id="no-results" class="col-12 text-center py-5">
                                <div style="font-size: 4rem; margin-bottom: 1rem;">🔍</div>
                                <h4>No se encontraron productos</h4>
                                <p class="text-muted">Prueba ajustando los filtros de búsqueda</p>
                            </div>
                        `);
                    }
                } else {
                    $('#no-results').remove();
                }
            }

            // Agregar al carrito
            $('.add-to-cart').click(function(e) {
                e.preventDefault();
                const productId = $(this).data('id');
                const $button = $(this);
                const originalHtml = $button.html();

                $button.html('<i class="fas fa-spinner fa-spin me-2"></i>Agregando...');
                $button.prop('disabled', true);

                setTimeout(() => {
                    $button.html('<i class="fas fa-check me-2"></i>¡Agregado!');
                    $button.removeClass('btn-outline-blue').addClass('btn-success-custom');

                    const $cartBadge = $('.badge');
                    const currentCount = parseInt($cartBadge.text()) || 0;
                    $cartBadge.text(currentCount + 1);

                    setTimeout(() => {
                        $button.html(originalHtml);
                        $button.removeClass('btn-success-custom').addClass('btn-outline-blue');
                        $button.prop('disabled', false);
                    }, 2500);
                }, 800);

                console.log('Producto agregado al carrito:', productId);
            });

            // Búsqueda principal
            $('#mainSearch').on('keyup', function() {
                const searchTerm = $(this).val();
                $('#searchInput').val(searchTerm);
                clearTimeout(filterTimeout);
                filterTimeout = setTimeout(filterProducts, 300);
            });

            // Botón de cargar más
            $('#loadMoreBtn').click(function() {
                const $button = $(this);
                const originalHtml = $button.html();

                $button.html('<i class="fas fa-spinner fa-spin me-2"></i>Cargando...');
                $button.prop('disabled', true);

                setTimeout(() => {
                    $button.html(originalHtml);
                    $button.prop('disabled', false);
                    console.log('Cargar más productos...');
                }, 1500);
            });
        });
    </script>
}