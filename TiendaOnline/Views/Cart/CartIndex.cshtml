@model TiendaOnline.Models.Dto.CartDto

@if (Model?.CartHeader != null && Model.CartDetailsDtos?.Any() == true)
{
    <form method="post" asp-action="EmailCart">
        <input asp-for="CartHeader.UserId" type="hidden" />
        <input asp-for="CartHeader.CartHeaderId" type="hidden" />
        

        <div class="card">
            <div class="card-header bg-dark text-light row" style="background-color:#5a189a!important;">
                <div class="col-6">
                    <h3><i class="bi bi-cart"></i> &nbsp; Shopping Cart</h3>
                </div>
                <div class="col-6 text-end">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-warning btn-sm mt-2">Continuar Comprando</a>
                </div>
            </div>

            <div class="card-body">
                <div class="d-none d-lg-block mb-2">
                    <div class="row text-info">
                        <div class="col-lg-2"></div>
                        <div class="col-lg-5"><span class="title-orange">Detalle del Producto</span></div>
                        <div class="col-lg-2"><span class="title-orange">Precio</span></div>
                        <div class="col-lg-2"><span class="title-orange">Cantidad</span></div>
                        <div class="col-lg-1"><span class="title-orange">Acciones</span></div>
                    </div>
                </div>

                <hr />

                @foreach (var cartObj in Model.CartDetailsDtos)
                {
                    if (cartObj?.ProductDto != null)
                    {
                        <div class="row align-items-center mb-3">
                            <div class="col-4 col-md-2 text-center">
                                <img src="@cartObj.ProductDto.Image" class="rounded" width="100" />
                            </div>
                            <div class="col-8 col-md-5">
                                <h5>@cartObj.ProductDto.Name</h5>
                                <div class="text-muted" style="font-size:11px;">@Html.Raw(cartObj.ProductDto.Description)</div>
                            </div>
                            <div class="col-3 col-md-2 text-md-center">
                                <span class="fw-bold">@string.Format("{0:c}", cartObj.ProductDto.Price)</span>
                            </div>
                            <div class="col-3 col-md-2 text-md-center">
                                <span class="fw-bold">@cartObj.Count</span>
                            </div>
                            <div class="col-2 col-lg-auto text-center">
                                <a asp-action="Remove" asp-route-cartDetailsId="@cartObj.CartDetailsId" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </div>
                    }
                }

                <hr />

                <div class="row mb-3">
                    <div class="col-6">
                        <span>Cupon:</span>
                        <div class="d-flex gap-2">
                            <input asp-for="CartHeader.CouponCode" class="form-control form-control-sm" />
                            @if (string.IsNullOrEmpty(Model.CartHeader.CouponCode))
                            {
                                <button type="submit" asp-action="ApplyCoupon" asp-controller="Cart" class="btn btn-sm btn-success">Aplicar</button>
                            }
                            else
                            {
                                <button type="submit" asp-action="RemoveCoupon" asp-controller="Cart" class="btn btn-sm btn-danger">Eliminar</button>
                            }
                        </div>
                    </div>
                    <div class="col-6 text-end">
                        <span class="text-danger fw-bold" style="font-size:21px;">Compra Total: @string.Format("{0:c}", Model.CartHeader.CartTotal)</span><br />
                        @if (Model.CartHeader.Discount > 0)
                        {
                            <span class="text-success fw-bold" style="font-size:21px;">Descuento: @string.Format("{0:c}", Model.CartHeader.Discount)</span>
                        }
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg w-100">
                        <i class="fas fa-envelope"></i> Enviar Carrito por Email
                    </button>
                    <div class="mt-2">
                        <a asp-action="Checkout" class="btn btn-outline-success w-100">Confirmar Pedido</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div class="text-center mt-5">
        <i class="fas fa-shopping-cart fa-2x"></i>
        <h4>Tu carrito está vacío</h4>
        <p>Agrega un producto para comenzar tu compra.</p>
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Ir a la tienda</a>
    </div>
}
