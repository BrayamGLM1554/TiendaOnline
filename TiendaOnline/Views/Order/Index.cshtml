@{
    var status = Context.Request.Query["status"];
    var approved = "";
    var readyforpickup = "";
    var cancelled = "";
    var all = "";
    switch (status)
    {
        case "approved":
            approved = "active text-while bg-secondary";
            break;
        case "readyforpickup":
            readyforpickup = "active text-while bg-secondary";
            break;
        case "cancelled":
            cancelled = "active text-while bg-secondary";
            break;
        default:
            all = "active text-while bg-secondary";
            break;
    }
}
<div class="card shadow border-0 at-4">
    <div class="card-header-tabs bg-secondary bg-gradient m-lg-0 py-3 d-flex justify-content-between">
        <div class="row">
            <h1 class="text-white roboto-Regular-400">Ordenes de compra</h1>
        </div>
        <ul class="list-group list-group-horizontal-sm pt-2">
            <a style="text-decoration:none" asp-controller="Order" asp-action="OrderIndex" asp-route-status="approved">
                <li class="list-group-item @approved">Aprovadas</li>
            </a>
            <a style="text-decoration:none" asp-controller="Order" asp-action="OrderIndex" asp-route-status="readyforpickup">
                <li class="list-group-item @readyforpickup">Listo para Recoger</li>
            </a>
            <a style="text-decoration:none" asp-controller="Order" asp-action="OrderIndex" asp-route-status="cancelled">
                <li class="list-group-item @cancelled">Canceladas</li>
            </a>
            <a style="text-decoration:none" asp-controller="Order" asp-action="OrderIndex" asp-route-status="all">
                <li class="list-group-item @all">Todas</li>
            </a>
        </ul>
    </div>
    <div class="card-body p-4">
        <table id="tblData" class="table table-bordered table-striped pt-3" style="width:100%">
            <thead>
                <tr>
                    <th class="roboto-Light-300">ID</th>
                    <th class="roboto-Light-300">Email</th>
                    <th class="roboto-Light-300">Nombre</th>
                    <th class="roboto-Light-300">Telefono</th>
                    <th class="roboto-Light-300">Status</th>
                    <th class="roboto-Light-300">Total</th>
                    <th class="roboto-Light-300">Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts {
    <script src="~/js/order.js"></script>
}