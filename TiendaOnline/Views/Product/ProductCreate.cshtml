@model TiendaOnline.Models.Dto.ProductDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
        :root {
            --color-principal: #28a745;
            --color-hover: #218838;
            --color-light: #d4edda;
            --color-border: #c3e6cb;
        }

        .product-form-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border-top: 5px solid var(--color-principal);
        }

        .poduct-form-title {
            color: var(--color-principal);
            font-weight: 700;
            text-align: center;
            margin-bottom: 2rem;
            font-size: 1.8rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            color: var(--color-principal);
            font-weight: 600;
            margin-bottom: 0.5rem;
            display: block;
        }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            padding: 0.75rem;
            transition: all 0.3s ease;
            font-size: 0.95rem;
        }

            .form-control:focus {
                border-color: var(--color-principal);
                box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.15);
                outline: none;
            }

        .input-group-text {
            background-color: var(--color-light);
            border-color: var(--color-border);
            color: var(--color-principal);
            font-weight: 600;
            border-radius: 8px 0 0 8px;
        }

        .input-group .form-control {
            border-left: none;
            border-radius: 0 8px 8px 0;
        }

            .input-group .form-control:focus {
                border-color: var(--color-principal);
                border-left: 2px solid var(--color-principal);
            }

        .file-input-container {
            position: relative;
        }

            .file-input-container input[type="file"] {
                border: 2px dashed var(--color-principal);
                background-color: rgba(40, 167, 69, 0.05);
                padding: 1rem;
                text-align: center;
                cursor: pointer;
            }

                .file-input-container input[type="file"]:hover {
                    background-color: rgba(40, 167, 69, 0.1);
                }

        .btn-submit {
            background-color: var(--color-principal);
            border: none;
            color: white;
            padding: 0.75rem 2rem;
            border-radius: 8px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            width: 100%;
            margin-bottom: 1rem;
        }

            .btn-submit:hover {
                background-color: var(--color-hover);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
            }

        .btn-primary {
            background-color: transparent;
            border: 2px solid var(--color-principal);
            color: var(--color-principal);
            padding: 0.6rem 1.5rem;
            border-radius: 8px;
            font-weight: 500;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: var(--color-principal);
                color: white;
                transform: translateY(-1px);
                text-decoration: none;
            }

        .validation-message {
            color: #dc3545;
            font-size: 0.85rem;
            margin-top: 0.25rem;
            display: block;
        }

        textarea.form-control {
            resize: vertical;
            min-height: 100px;
        }

        .form-group:last-of-type {
            text-align: center;
            margin-top: 2rem;
        }

        .form-section {
            background-color: #f8f9fa;
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1.5rem;
            border-left: 4px solid var(--color-principal);
        }

        .section-title {
            color: var(--color-principal);
            font-weight: 600;
            margin-bottom: 1rem;
            font-size: 1.1rem;
        }
    </style>
}

<div class="container-fluid py-4">
    <div class="product-form-container">
        <h2 class="poduct-form-title">
            <i class="fas fa-plus-circle me-2"></i>
            Crear Nuevo Producto
        </h2>
        <form asp-action="ProductCreate" enctype="multipart/form-data">

            <!-- Información básica -->
            <div class="form-section">
                <div class="section-title">
                    <i class="fas fa-info-circle me-2"></i>
                    Información Básica
                </div>

                <div class="form-group">
                    <label asp-for="Name" class="form-label">
                        <i class="fas fa-tag me-1"></i>
                        Nombre del Producto
                    </label>
                    <input asp-for="Name" class="form-control" placeholder="Ingrese el nombre del producto" />
                    <span asp-validation-for="Name" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryName" class="form-label">
                        <i class="fas fa-list me-1"></i>
                        Categoría
                    </label>
                    <input asp-for="CategoryName" class="form-control" placeholder="Seleccione una categoría" />
                    <span asp-validation-for="CategoryName" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">
                        <i class="fas fa-align-left me-1"></i>
                        Descripción
                    </label>
                    <textarea asp-for="Description" class="form-control" placeholder="Describa el producto detalladamente" rows="4"></textarea>
                    <span asp-validation-for="Description" class="validation-message"></span>
                </div>
            </div>

            <!-- Precio e imagen -->
            <div class="form-section">
                <div class="section-title">
                    <i class="fas fa-dollar-sign me-2"></i>
                    Precio e Imagen
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="form-label">
                        <i class="fas fa-money-bill-wave me-1"></i>
                        Precio
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Price" class="form-control" placeholder="0.00" type="number" step="0.01" min="0" />
                    </div>
                    <span asp-validation-for="Price" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Image" class="form-label">
                        <i class="fas fa-image me-1"></i>
                        Imagen del Producto
                    </label>
                    <div class="file-input-container">
                        <input asp-for="Image" class="form-control" type="file" accept="image/*" />
                        <input asp-for="ImageUrl" hidden class="form-control" />
                    </div>
                    <span asp-validation-for="Image" class="validation-message"></span>
                    <small class="text-muted">Formatos aceptados: JPG, PNG, GIF (máx. 5MB)</small>
                </div>
            </div>

            <!-- Botones -->
            <div class="form-group">
                <button type="submit" class="btn btn-submit">
                    <i class="fas fa-save me-2"></i>
                    Crear Producto
                </button>
                <a asp-action="ProductIndex" class="btn btn-primary">
                    <i class="fas fa-arrow-left me-2"></i>
                    Volver al Listado
                </a>
            </div>
        </form>
    </div>
</div>

<script>
    document.querySelector('input[type="file"]').addEventListener('change', function (e) {
        const fileName = e.target.files[0]?.name || 'Ningún archivo seleccionado';
        const fileInputLabel = this.nextElementSibling;
        if (fileInputLabel && fileInputLabel.classList.contains('file-input-label')) {
            const fileNameElement = fileInputLabel.querySelector('.file-name');
            if (fileNameElement) {
                fileNameElement.textContent = fileName;
            }
        }
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}